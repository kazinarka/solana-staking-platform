{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "compilerOptions": {
    "module": "commonjs",
    "strictNullChecks": true,
    "target": "es2015",
    "declaration": true,
    "outDir": "./dist",
    "sourceMap": true,
    "lib": ["es2015"],
    "rootDir": "src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}